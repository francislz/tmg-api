{
  "name": "tmg-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "clean": "rm -rf dist",
    "start": "npm run clean && npm run build && node dist/index.js",
    "start:prod": "node dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint --ignore-pattern .gitignore",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore",
    "test": "jest",
    "test:coverage": "jest --coverage src/.",
    "test:sonar": "jest --coverage --testResultsProcessor=jest-sonar-reporter",
    "test:watch": "jest --watchAll --coverage --detectOpenHandles"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "eslint-plugin-jest": "^28.8.3",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "dependencies": {
    "celebrate": "^15.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "joi": "^17.13.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsyringe": "^4.8.0"
  }
